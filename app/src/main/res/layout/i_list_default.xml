<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/i_list_default_root"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_type_default_height"
    android:paddingLeft="@dimen/view_type_default_padding_left"
    android:paddingRight="@dimen/view_type_default_padding_right">

    <ImageView
        android:id="@+id/i_list_default_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_type_default_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"/>

    <View
        android:id="@+id/i_list_default_loading_view"
        android:layout_width="@dimen/item_loading_view_width"
        android:layout_height="@dimen/item_loading_view_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>